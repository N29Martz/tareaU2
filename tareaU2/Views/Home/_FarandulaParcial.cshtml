@model IEnumerable<Farandula>

@if (Model is not null)
{
    <div class="text-center" style="padding-top: 6rem;">
        <hr class="bg-primary">
        <div class="font-monospace p-3 mb-2 text-center text-white fs-1 fw-bold" style="background-color: #ADFAF6;">FARÁNDUULA</div>
        <hr class="bg-primary">
        <p>Aquí encontraras las últimas noticias del deporte nacional e internacional</p>
        <hr class="bg-primary">

        <div class="container">
            <div class="row row-cols-1 row-cols-3">
                @foreach (var farandula in Model)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img class="card-img-top p-1" src="@farandula.ImagenUrl" alt="Logo @farandula.Titulo" />
                            <div class="card-body">
                                <h5 class="card-title">@farandula.Titulo</h5>
                                <p class="card-text">@farandula.Descripcion</p>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-primary" target="_blank" href="@farandula.Link">leer más</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
