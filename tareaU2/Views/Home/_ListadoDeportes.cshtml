@model IEnumerable<Deportes>

@if (Model is not null){
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var deportes in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img class="card-img-top p-1" src="@deportes.ImagenUrl" alt="@deportes.Titulo" />
                        <div class="card-body">
                            <h5 class="card-title">@deportes.Titulo</h5>
                            <p class="card-text">@deportes.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@deportes.Link">Leer más</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}